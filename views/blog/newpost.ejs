<% include header %>

    <div class="container">

        <div class="row">

			<form method="post" role="form" action='/create'>
				<div class="form-group">
				<h2>New Blog Post</h2>
				<br />
					<label for="title">Title</label>					
					<input type="text" class="form-control" id="title" name="title" placeholder="Blog title" required>
				</div>

				<div class="form-group">
					<label for="content">Subtitle</label>
					<input type="text" class="form-control" id="subtitle" name="subtitle" placeholder="Enter subtitle" required>
				</div>
				
				<div class="form-group">
					<label for="content">Enter text</label>
					<textarea class="form-control" id="article" name="article" placeholder="Begin blog article" rows="4" required>
					</textarea>
				</div>

				<div class="content_tag">
					<label for="content">Date of Publication</label>
					<input type="text" class="form-control" name="date" id="pub_date"  placedholder="Published Date" required>
				</div>

				
				<div>
					<label for="author">Author</label>
					<input type="text" class="form-control" id="author" name="author" placeholder="author" required>				
				</div>

<!-- Div below is provides a link to the author's bio -->
				<div class="content_tag">
					<label for="content">About Author</label>
					<input type="text" class="form-control" name="authlink" id="authlink">
				</div>	
			
				<div class="form-group">
					<input type="submit" value="post-blog" class="btn btn-primary">
				</div>
			</form>
		</div>
	</div>

<% include footer %>